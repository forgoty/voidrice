#!/bin/sh

# A dmenu wrapper script for system functions.
export WM="dwm"

wmpid(){ # This function is needed if there are multiple instances of the window manager.
	tree="$(pstree -ps $$)"
	tree="${tree#*$WM(}"
	echo "${tree%%)*}"
}

case "$(printf "ğŸ”’ lock\nğŸšª leave $WM\nâ™»ï¸ renew $WM\nğŸ”ƒ reboot\nğŸ–¥ï¸shutdown\nğŸ’¤ sleep\n" | dmenu -i -p 'Action: ')" in
	'ğŸ”’ lock') sudo slock ;;
	"ğŸšª leave $WM") kill -TERM "$(wmpid)" ;;
	"â™»ï¸ renew $WM") kill -HUP "$(wmpid)" ;;
	'ğŸ’¤ sleep') sudo loginctl suspend && sudo slock ;;
	'ğŸ”ƒ reboot') sudo reboot ;;
	'ğŸ–¥ï¸shutdown') sudo shutdown ;;
	*) exit 1 ;;
esac
